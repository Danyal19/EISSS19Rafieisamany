<h1>Herausforderung Definieren</h1>
<form action="/compete" method="POST">
    <select name="sport">
        <option disabled selected>Sportart</option>
        <option value="Joggen">Joggen</option>
    </select>

    <select name="time">
        <option disabled selected>Zeitintervall</option>
        <option value="0:30">30 Minuten</option>
        <option value="1:00">1 Stunde</option>
        <option value="1:30">1,5 Stunde</option>
        <option value="2:00">2 Stunden</option>
        <option value="2:30">2,5 Stunden</option>
        <option value="3:00">3 Stunden</option>

    </select>

    <select name="m">
        <option disabled selected>Distanz</option>
        <option value="500">500 m</option>
        <option value="1000">1 Km</option>
        <option value="2000">2 Km</option>
        <option value="3000">3 Km</option>
        <option value="4000">4 Km</option>
        <option value="5000">5 Km</option>
        <option value="6000">6 Km</option>
        <option value="7000">7 Km</option>
        <option value="8000">8 Km</option>
        <option value="9000">9 Km</option>
        <option value="10000">10 Km</option>
    </select>
    <input type="text" value="{{user}}" name="user" hidden/>
    <input type="text" value="{{chal}}" name="chal" hidden/>
    <button type="submit">Herausfordern!</button>
</form>
